<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editor_task_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:hint="@string/task_editor_hint_task_name"
        android:importantForAutofill="no"
        android:inputType="textAutoComplete"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="18sp"
        tools:targetApi="o"
        tools:text="@string/add_a_task_when_empty" />

    <TextView
        android:id="@+id/editor_task_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="32sp"
        android:visibility="gone"
        tools:targetApi="jelly_bean"
        tools:text="@tools:sample/date/ddmmyy"
        tools:visibility="visible" />

    <Button
        android:id="@+id/task_notification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_editor_select_due_date"
        android:textColor="#000"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/task_repeat_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/task_editor_repeat_task"
        android:textColor="#000"
        android:textSize="16sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/task_repeat_frequency_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#000"
        android:visibility="gone"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/editor_task_priority_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#000" />

</LinearLayout>
